<%= form_with model: @user, url: user_registration_path, class: "sign-up-form", local: true do |f| %>
<h2 class="sign-up-title">新規登録</h2>

<div class='login-flash-message'>
  <%= render 'shared/error_messages', model: f.object %>
</div>

  <div class="field">
    <div class="contents-title">メールアドレス</div>
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="password-content">
  <div class="field">
    <div class="contents-title">パスワード</div>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <div class="contents-title">パスワード再入力</div>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>
  </div>

  <div class="field">
    <div class="contents-title">ユーザー名</div>
    <%= f.text_area :name, class: "input-default", id: "name", autofocus: true %>
  </div>

  <div class="contents-title">生年月日</div>
  <div class='input-birth-wrap'>
      <%= raw sprintf(
                  f.date_select(
                    :birthday,
                    class:'select-birth',
                    id:"birth-date",
                    use_month_numbers: true,
                    prompt:'--',
                    start_year: 1930,
                    end_year: (Time.now.year - 5),
                    date_separator: '%s'),
                  "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
  </div>

  <div class="field">
    <div class="contents-title">性別</div>
    <%= f.collection_select(:gender_id, Gender.all, :id, :name, {}, {class:"select-box", id:"user-gender"}) %>
  </div>

  <div class="field">
    <div class="contents-title">住所</div>
    <%= f.collection_select(:prefecture_id, Prefecture.all, :id, :name, {}, {class:"select-box", id:"user-prefecture"}) %>
  </div>

  <div class="field">
    <div class="contents-title">職業</div>
    <%= f.collection_select(:job_id, Job.all, :id, :name, {}, {class:"select-box", id:"user-job"}) %>
  </div>

  <div class="actions">
    <%= f.submit "登録", class: "sign-up-btn" %>
  </div>
<% end %>
