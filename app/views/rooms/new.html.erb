<div class="new-create-contents">
<h1 class="create-room-title">チャットルームの作成</h1>
<%= form_with model: @room, url: rooms_path, local: true do |f| %>

<%= render 'shared/error_messages', model: f.object %>

<div class="create-contents-title">
  <div class="room-agenda">
    <label for = "room_agenda">ルームのアジェンダを設定</label>
  </div>
  <%= f.text_area :agenda, class:"room-agenda", placeholder:"例) あなたは犬派？それとも猫派？" %>

  <div class="create-contents-title">2つのスタンスを設定</div>
    <div class="stance-contents-title">
      <div class="stance-A-title">
      <label for = "room_stanceA">スタンスA</label>
      </div>
      <%= f.text_area :stanceA, class:"room-stanseA", placeholder:"例) 犬派" %>
    </div>

    <div class="stance-contents-title">
      <div class="stance-B-title">
      <label for = "room_stanceB">スタンスB</label>
      </div>
      <%= f.text_area :stanceB, class:"room-stanceB", placeholder:"例) 猫派" %>
    </div>

  <div class="room-create-btn-contents">
    <%= f.submit "ルーム作成" ,class:"room-create-btn" %>
    <%=link_to 'もどる', root_path, class:"back-btn" %>
  </div>

  </div>
  </div>
<% end %>
</div>